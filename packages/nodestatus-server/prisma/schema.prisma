generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db.base.sqlite"
}

model Server {
  id         Int      @id @default(autoincrement())
  username   String  @unique(map: "sqlite_autoindex_servers_1")
  password   String
  name       String
  type       String
  location   String
  region     String
  disabled   Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("servers")
}
