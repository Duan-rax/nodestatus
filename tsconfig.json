{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "baseUrl": "."
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "web/**/*.ts",
    "web/**/*.tsx",
    "web/**/*.d.ts",
    "web/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
